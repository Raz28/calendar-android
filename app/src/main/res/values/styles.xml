<resources>

    <!-- Base application theme. -->
    <style name="CalendarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CalendarTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CalendarTheme.NavigationView">
        <item name="android:listDivider">@color/gray</item>
    </style>

    <style name="CalendarTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="CalendarTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>



</resources>